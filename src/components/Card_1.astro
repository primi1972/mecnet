---
export interface Props {
	imagen: string;
	title: string;
	body: string;
}

const { imagen,title, body } = Astro.props;
---

<div class="card">
		<h2>
			{title}
		</h2>
		<img src={imagen} alt="">			
		<p>
			{body}
		</p>
</div>

<style>
	.card {
		display: flex;
		padding: 0.15rem;
		border-radius: 0.2rem;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -2px rgba(0, 0, 0, 0.1);
		width: 350px;
		border-width: .2rem;
		border-color: #fff;
		background-color: wheat;
	}
	img{
		width: 100%;
		border-radius: .2rem;
		margin-right: 1rem;
	}
	h2 {
		text-align: center;
		font-size: 2rem;
		color: #444;
		text-shadow: 2px 2px 5px #666;
		margin: 10px 0px;
	}
	p {
		font-size: 1rem;
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: #444;
		text-align: center;
	}
</style>
