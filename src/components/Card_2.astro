---
export interface Props {
  img: string;
  text: string;
  href: string;
  tipo: string;
}

const { img, href, text, tipo } = Astro.props;
---

<div class="card">
  <img src={img} alt="" />
  <p>
    {text}
  </p>
  <a href={href} class="" target="_blank">{tipo}</a>
</div>

<style>
  .card {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-direction: row;
    border-radius: 0.2rem;
    box-shadow: 2px 2px 10px #fff;
    margin: 10px 0px;
    min-width: 350px;
    background-color: wheat;
    padding: 0.3rem 0.3rem;
  }

  .card > a {
    text-decoration: none;
    padding: 5px 10px;
  
    color: white;
    background-color: green;
    transition: 200ms;
    margin-right: .5rem;
  }

  .card > a:hover {
    box-shadow: 2px 2px 6px -1px black
  }

  img {
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    margin: 0 .5rem;
  }

  p {
    font-size: 1rem;
    color: black;
    text-align: center;
    margin-right: 15px;
  }
</style>
