---
import logo from "/logo.svg";
import Enlace from "../components/Enlace.astro";
---

<nav class="bg-stone-300 flex items-center">
  <a href="/" class="m-4"><img src={logo} alt="" /></a>
  <div class="ml-4">
    <ul class="md:flex hidden">
      <Enlace name="Inicio" href="/" />
      <Enlace name="Productos" href="/Productos" />
      <Enlace name="Servicios" href="/Servicios" />
      <Enlace name="Hardware" href="/Hardware" />
      <Enlace name="Software" href="/Software" />
      <Enlace name="Noticias" href="/Noticias" />
      <Enlace name="Contacto" href="/Contacto" />
    </ul>
  </div>
</nav>

<style>
  nav {
    position: fixed;
    z-index: 2;
    width: 100vw;
    top:0;
  }
  img {
    width: 50px;
    height: 50px;
  }
</style>
