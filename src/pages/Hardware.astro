<style>
  .background {
    background-image: url("/software.jpg");
    position: relative;
    height: 100%;
    width: auto;
    background-attachment: fixed;
    background-position: center;
    overflow: hidden;
  }
  .background:before {
    content: "";
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.7);
  }
  .categoria {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: center;
    position: relative;
    padding-top: 100px;
    padding-bottom: 30px;
    width: 100%;
    text-align: center;
    color: white;
    filter: drop-shadow(0 4px 3px rgb(0 0 0 / 0.07))
      drop-shadow(0 2px 2px rgb(0 0 0 / 0.06));
  }
</style>
